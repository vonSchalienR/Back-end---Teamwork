<div class="courses-shell">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h5 mb-0">News</h2>
        {{#if user}}
            {{#ifEq user.role 'admin'}}
                <div>
                    <a class="btn btn-sm btn-secondary" href="/news/create">Create</a>
                    <a class="btn btn-sm btn-primary" href="/news/manage">Manage</a>
                </div>
            {{/ifEq}}
        {{/if}}
    </div>

    <div class="course-grid">
        {{#if news}}
            {{#each news}}
                <article class="course-card">
                    {{#if image}}<img src="{{image}}" alt="" style="width:100%;border-radius:8px;margin-bottom:10px;" />{{/if}}
                    <h3 class="course-title"><a href="/news/{{slug}}">{{title}}</a></h3>
                    <p class="course-desc">{{#if content}}{{truncate content 140}}{{/if}}</p>
                    <a class="btn btn-primary" href="/news/{{slug}}">Read</a>
                </article>
            {{/each}}
        {{else}}
            <p>No news yet.</p>
        {{/if}}
    </div>
</div>
<h1>Latest News</h1>
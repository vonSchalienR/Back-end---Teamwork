<h2>My Courses</h2>
<table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Level</th>
      <th scope="col" colspan="2">Created At</th>

    </tr>
  </thead>
  <tbody>
    {{#each courses}}
    <tr {{#if this.deleted}}class="table-secondary"{{/if}}>
      <th scope="row">{{sum @index 1}}</th>
      <td>
        {{this.name}}
        {{#if this.deleted}}
          <span class="badge badge-danger ml-2">DELETED</span>
        {{/if}}
      </td>
      <td>{{this.level}}</td>
      <td>{{this.createdAt}}</td>
      <td>
        {{#if this.deleted}}
          <!-- Course đã bị soft delete - hiển thị nút Restore và Force Delete -->
          <form method="POST" action="/courses/{{this._id}}/restore?_method=PATCH" style="display:inline;">
            <button type="submit" class="btn btn-success btn-sm">Restore</button>
          </form>
          <form method="POST" action="/courses/{{this._id}}/force?_method=DELETE" style="display:inline;" 
                onsubmit="return confirm('Permanently delete this course? This cannot be undone!')">
            <button type="submit" class="btn btn-danger btn-sm mt-4">Delete Forever</button>
          </form>
        {{else}}
          <!-- Course bình thường - hiển thị Edit và Delete -->
          <a class="btn btn-primary btn-sm mr-2" href="/courses/{{this._id}}/edit">Edit</a>
          {{!-- <form method="POST" action="/courses/{{this._id}}?_method=DELETE" style="display:inline;"
                onsubmit="return confirm('Delete this course?')">
            <button type="submit" class="btn btn-warning btn-sm">Delete</button>
          </form> --}}
          <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#delete-course-modal" data-id="{{this._id}}" >Delete</button>
        {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<!-- Modal -->
<div class="modal fade" id="delete-course-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are u sure?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <form id="delete-course-form" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>

  document.addEventListener('DOMContentLoaded', function() {
    $('#delete-course-modal').on('show.bs.modal', function (event) {
      const button = $(event.relatedTarget);
      const courseId = button.data('id');
      console.log('Course ID:', courseId);
      
      // Update the form action with the course ID - Fixed path
      $(this).find('form').attr('action', '/courses/' + courseId + '?_method=DELETE');
    });
  });


 

</script>


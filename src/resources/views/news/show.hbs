<div class="courses-shell">
    <article class="course-card">
        <h2 class="course-title">{{news.title}}</h2>
        {{#if news.image}}<img src="{{news.image}}" alt="" style="width:100%;border-radius:8px;margin-bottom:10px;" />{{/if}}
        <div class="course-desc">{{{news.content}}}</div>
        <div class="mt-3 text-muted">Published: {{news.createdAt}}</div>
        {{#if news.author}}
            <div class="text-muted">Author: {{news.author.name}}</div>
        {{/if}}
        {{#if user}}
            {{#ifEq user.role 'admin'}}
                <div class="mt-3">
                    <a class="btn btn-sm btn-primary" href="/news/{{news._id}}/edit">Edit</a>
                    <a class="btn btn-sm btn-secondary" href="/news/manage">Manage</a>
                </div>
            {{/ifEq}}
        {{/if}}
    </article>
</div>

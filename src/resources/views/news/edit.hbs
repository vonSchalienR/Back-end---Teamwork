<div class="auth-shell">
    <h2 class="h4">Edit News</h2>

    {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
    {{/if}}

    <form action="/news/{{news._id}}?_method=PUT" method="POST" class="form-auth">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <div class="form-group">
            <label for="title">Title</label>
            <input id="title" name="title" type="text" class="form-control" required value="{{news.title}}">
        </div>

        <div class="form-group">
            <label for="image">Image URL (optional)</label>
            <input id="image" name="image" type="text" class="form-control" value="{{news.image}}">
        </div>

        <div class="form-group">
            <label for="content">Content</label>
            <textarea id="content" name="content" class="form-control" rows="6">{{news.content}}</textarea>
        </div>

        <div class="form-group form-check">
            <input id="published" name="published" type="checkbox" class="form-check-input" {{#if news.published}}checked{{/if}}>
            <label for="published" class="form-check-label">Publish</label>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-secondary" href="/news/manage">Cancel</a>
        </div>
    </form>
</div>

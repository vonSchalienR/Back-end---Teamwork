<div class="auth-shell">
    <h2 class="h4">Create News</h2>

    {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
    {{/if}}

    <form action="/news/store" method="POST" class="form-auth">
        <div class="form-group">
            <label for="title">Title</label>
            <input id="title" name="title" type="text" class="form-control" required value="{{title}}">
        </div>

        <div class="form-group">
            <label for="image">Image URL (optional)</label>
            <input id="image" name="image" type="text" class="form-control" value="{{image}}">
        </div>

        <div class="form-group">
            <label for="content">Content</label>
            <textarea id="content" name="content" class="form-control" rows="6">{{content}}</textarea>
        </div>

        <div class="form-group form-check">
            <input id="published" name="published" type="checkbox" class="form-check-input" {{#if published}}checked{{/if}}>
            <label for="published" class="form-check-label">Publish now</label>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Create</button>
            <a class="btn btn-secondary" href="/news">Cancel</a>
        </div>
    </form>
</div>

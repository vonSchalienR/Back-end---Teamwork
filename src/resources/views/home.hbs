<div class="hero">
    <div class="d-flex flex-column">
        <h1 class="hero-title">Welcome!</h1>
        <p class="hero-subtitle">
       
        </p>
    </div>
</div>

<div class="courses-shell">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h5 mb-0">Featured courses</h2>
    </div>

    <div class="course-grid">
        {{#if courses}}
            {{#each courses}}
                <article class="course-card">
                    <div class="course-meta">{{#if level}}{{level}}{{else}}General{{/if}}</div>
                    <h3 class="course-title">{{name}}</h3>
                    <p class="course-desc">{{description}}</p>
                    <a class="btn btn-primary" href="/courses/{{slug}}">Open course</a>
                </article>
            {{/each}}
        {{else}}
            <p class="text-muted">No courses available.</p>
        {{/if}}
    </div>
</div>
